{
	"flow": {
		"start": {
            "d": [
                [".start", {
                    "port": 8080,
                    "ssl": {
                        "cert": "ssl/dev.crt",
                        "key": "ssl/dev.key"
                    }
                }]
            ]
        },
        "http_req": {
            "d": [
				[":concat", {"to": "body"}],
                ":http_router/route"
            ]
        },
        "http_auth_err": {
            "d": [
                [":send", {
                    "code": 400,
                    "end": true,
                    "send": "message"
                }]
            ]
        }
	},
	"name": "http_server",
	"module": "flow-http",
	"roles": {
		"*": true
	}
}
